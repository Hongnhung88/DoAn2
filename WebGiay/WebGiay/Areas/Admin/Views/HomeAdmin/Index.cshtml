
@{
    ViewBag.Title = "Shoes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-md-center">
                    <i class="mdi mdi-basket icon-lg text-success"></i>
                    <div class="ml-3">
                        <p class="mb-0">Đơn hàng</p>
                        <h6>@ViewBag.Order</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-md-center">
                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="shoe-prints" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" class="text-warning" style="width: 2.8rem; height: 3.8rem">
                        <path fill="currentColor" d="M192 160h32V32h-32c-35.35 0-64 28.65-64 64s28.65 64 64 64zM0 416c0 35.35 28.65 64 64 64h32V352H64c-35.35 0-64 28.65-64 64zm337.46-128c-34.91 0-76.16 13.12-104.73 32-24.79 16.38-44.52 32-104.73 32v128l57.53 15.97c26.21 7.28 53.01 13.12 80.31 15.05 32.69 2.31 65.6.67 97.58-6.2C472.9 481.3 512 429.22 512 384c0-64-84.18-96-174.54-96zM491.42 7.19C459.44.32 426.53-1.33 393.84.99c-27.3 1.93-54.1 7.77-80.31 15.04L256 32v128c60.2 0 79.94 15.62 104.73 32 28.57 18.88 69.82 32 104.73 32C555.82 224 640 192 640 128c0-45.22-39.1-97.3-148.58-120.81z" class=""></path>
                    </svg>
                    <div class="ml-3">
                        <p class="mb-0">Tổng giày</p>
                        <h6>@ViewBag.Model</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-md-center">
                    <i class="mdi mdi-view-list icon-lg text-info"></i>
                    <div class="ml-3">
                        <p class="mb-0">Hãng giày</p>
                        <h6>@ViewBag.Car</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-md-center">
                    <i class="mdi mdi-coin icon-lg text-danger"></i>
                    <div class="ml-3">
                        <p class="mb-0">Tổng doanh thu</p>
                        @*<h6>@ViewBag.Price</h6>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
